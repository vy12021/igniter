<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android 15+ (API 35+) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Android 15+ specific configurations -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- Enable edge-to-edge display for Android 15+ -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Let BaseAppCompatActivity handle status bar programmatically -->
    </style>

    <style name="AppThemeNoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <!-- Ensure proper edge-to-edge handling -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>